<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/woi_home_bgrd"
    tools:context=".MainActivity"
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/disp_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/userpic" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/user_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
         />
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
    
        <ImageView
        android:id="@+id/offer_wall"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/woi_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        
         />
        
        <ImageView
        android:id="@+id/refer_a_friend"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/woi_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
       />
        
        <ImageView
        android:id="@+id/transfer"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/woi_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="0dp"
        android:paddingBottom="5dp" 
        />
    
        </LinearLayout>
        
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
    
        <ImageView
        android:id="@+id/math_challenge"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/chal1_page1_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
       
         />
        
        <ImageView
        android:id="@+id/memory_challenge"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/chal2_page1_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" 
        />
        
        <ImageView
        android:id="@+id/monthly_challenge"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/chal3_page1_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    
        </LinearLayout>
        
    <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
    
        <ImageView
        android:id="@+id/friends"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/woi_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
       
         />
        
        <ImageView
        android:id="@+id/shopping"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/woi_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
         />
        
        <ImageView
        android:id="@+id/transactions"
        android:layout_width="64dp"
        android:layout_height="60dp"
        android:src="@drawable/woi_icon"
        android:paddingRight="7dp"
        android:paddingLeft="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    
        </LinearLayout>
        
    </LinearLayout>
    
</LinearLayout>